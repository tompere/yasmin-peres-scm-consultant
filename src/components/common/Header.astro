---
const navItems = [
  { label: "ראשי", href: "/#home" },
  { label: "שירותים", href: "/#services" },
  { label: "המתודולוגיה", href: "/#methodology" },
  { label: "שאלות נפוצות", href: "/#faq" },
  { label: "אודות", href: "/#about" },
  { label: "צור קשר", href: "/#contact" },
];
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-blue-100 transition-shadow duration-300" id="site-header">
  <nav aria-label="ניווט ראשי" class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="group flex items-center gap-3">
      <span class="text-2xl font-extrabold tracking-tight text-navy-700">
        יסמין פרס
      </span>
      <span class="text-xs text-navy-500 leading-tight border-r border-blue-100 pr-3">
        ייעוץ שרשרת אספקה ותפעול
      </span>
    </a>

    <!-- Desktop Nav -->
    <ul class="hidden md:flex items-center gap-1" role="list">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="relative px-4 py-2 text-[15px] font-medium text-navy-500 hover:text-navy-700 transition-colors duration-200 rounded-md hover:bg-blue-50"
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile Toggle -->
    <button
      id="mobile-menu-toggle"
      type="button"
      class="md:hidden p-3 rounded-md text-navy-500 hover:text-navy-700 hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-pink-200 transition-colors"
      aria-expanded="false"
      aria-controls="mobile-menu"
      aria-label="תפריט ניווט"
    >
      <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white/95 backdrop-blur-md border-t border-blue-100">
    <ul class="px-6 py-4 space-y-1" role="list">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="block py-3 px-3 text-sm font-medium text-navy-500 hover:text-navy-700 hover:bg-blue-50 rounded-md transition-colors"
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  const toggle = document.getElementById("mobile-menu-toggle");
  const menu = document.getElementById("mobile-menu");
  const iconOpen = document.getElementById("menu-icon-open");
  const iconClose = document.getElementById("menu-icon-close");
  const header = document.getElementById("site-header");

  function closeMenu() {
    if (!menu || !iconOpen || !iconClose || !toggle) return;
    menu.classList.add("hidden");
    iconOpen.classList.remove("hidden");
    iconClose.classList.add("hidden");
    toggle.setAttribute("aria-expanded", "false");
  }

  if (toggle && menu && iconOpen && iconClose) {
    toggle.addEventListener("click", () => {
      const expanded = toggle.getAttribute("aria-expanded") === "true";
      toggle.setAttribute("aria-expanded", String(!expanded));
      menu.classList.toggle("hidden");
      iconOpen.classList.toggle("hidden");
      iconClose.classList.toggle("hidden");

      // Focus first link when opening
      if (!expanded) {
        const firstLink = menu.querySelector("a");
        if (firstLink) firstLink.focus();
      }
    });

    // Close menu on nav link click
    menu.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        closeMenu();
      });
    });

    // Close on Escape and return focus to toggle
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && toggle.getAttribute("aria-expanded") === "true") {
        closeMenu();
        toggle.focus();
      }
    });

    // Focus trap within mobile menu
    const menuLinks = menu.querySelectorAll("a");
    if (menuLinks.length > 0) {
      const firstLink = menuLinks[0];
      const lastLink = menuLinks[menuLinks.length - 1];

      menu.addEventListener("keydown", (e) => {
        if (e.key !== "Tab") return;

        if (e.shiftKey) {
          // Shift+Tab on first link → go to toggle button
          if (document.activeElement === firstLink) {
            e.preventDefault();
            toggle.focus();
          }
        } else {
          // Tab on last link → go to toggle button
          if (document.activeElement === lastLink) {
            e.preventDefault();
            toggle.focus();
          }
        }
      });

      // Tab from toggle into menu (when open)
      toggle.addEventListener("keydown", (e) => {
        if (e.key === "Tab" && !e.shiftKey && toggle.getAttribute("aria-expanded") === "true") {
          e.preventDefault();
          firstLink.focus();
        }
      });
    }
  }

  // Add shadow on scroll
  if (header) {
    window.addEventListener("scroll", () => {
      if (window.scrollY > 10) {
        header.classList.add("shadow-lg", "shadow-blue-200/20");
      } else {
        header.classList.remove("shadow-lg", "shadow-blue-200/20");
      }
    });
  }
</script>
