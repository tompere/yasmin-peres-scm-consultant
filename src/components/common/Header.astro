---
const navItems = [
  { label: "ראשי", href: "#home" },
  { label: "שירותים", href: "#services" },
  { label: "המתודולוגיה", href: "#methodology" },
  { label: "אודות", href: "#about" },
  { label: "צור קשר", href: "#contact" },
];
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-md border-b border-blue-100 transition-shadow duration-300" id="site-header">
  <nav aria-label="ניווט ראשי" class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="#home" class="group flex items-center gap-3">
      <span class="text-2xl font-extrabold tracking-tight text-navy-700">
        יסמין פרס
      </span>
      <span class="text-[11px] text-navy-400 leading-tight border-r border-blue-100 pr-3">
        ייעוץ שרשרת אספקה ותפעול
      </span>
    </a>

    <!-- Desktop Nav -->
    <ul class="hidden md:flex items-center gap-1" role="list">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="relative px-4 py-2 text-sm font-medium text-navy-400 hover:text-navy-700 transition-colors duration-200 rounded-md hover:bg-blue-50"
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Mobile Toggle -->
    <button
      id="mobile-menu-toggle"
      type="button"
      class="md:hidden p-2 rounded-md text-navy-400 hover:text-navy-700 hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-pink-200 transition-colors"
      aria-expanded="false"
      aria-controls="mobile-menu"
      aria-label="תפריט ניווט"
    >
      <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white/95 backdrop-blur-md border-t border-blue-100">
    <ul class="px-6 py-4 space-y-1" role="list">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="block py-3 px-3 text-sm font-medium text-navy-400 hover:text-navy-700 hover:bg-blue-50 rounded-md transition-colors"
          >
            {item.label}
          </a>
        </li>
      ))}
      <li class="pt-2">
        <a
          href="https://wa.me/972548882218?text=%D7%A9%D7%9C%D7%95%D7%9D%20%D7%99%D7%A1%D7%9E%D7%99%D7%9F%2C%20%D7%A8%D7%90%D7%99%D7%AA%D7%99%20%D7%90%D7%AA%20%D7%94%D7%90%D7%AA%D7%A8%20%D7%A9%D7%9C%D7%9A%20%D7%95%D7%90%D7%A9%D7%9E%D7%97%20%D7%9C%D7%A9%D7%95%D7%97%D7%97%20%D7%A2%D7%9C%20%D7%99%D7%99%D7%A2%D7%95%D7%A5%20%D7%A9%D7%A8%D7%A9%D7%A8%D7%AA%20%D7%90%D7%A1%D7%A4%D7%A7%D7%94."
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-2 py-3 px-3 text-sm font-bold bg-[#25D366] text-white rounded-md hover:bg-[#20bd5a] transition-colors"
        >
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
          צרו קשר
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  const toggle = document.getElementById("mobile-menu-toggle");
  const menu = document.getElementById("mobile-menu");
  const iconOpen = document.getElementById("menu-icon-open");
  const iconClose = document.getElementById("menu-icon-close");
  const header = document.getElementById("site-header");

  if (toggle && menu && iconOpen && iconClose) {
    toggle.addEventListener("click", () => {
      const expanded = toggle.getAttribute("aria-expanded") === "true";
      toggle.setAttribute("aria-expanded", String(!expanded));
      menu.classList.toggle("hidden");
      iconOpen.classList.toggle("hidden");
      iconClose.classList.toggle("hidden");
    });

    // Close menu on nav link click
    menu.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        menu.classList.add("hidden");
        iconOpen.classList.remove("hidden");
        iconClose.classList.add("hidden");
        toggle.setAttribute("aria-expanded", "false");
      });
    });
  }

  // Add shadow on scroll
  if (header) {
    window.addEventListener("scroll", () => {
      if (window.scrollY > 10) {
        header.classList.add("shadow-lg", "shadow-blue-200/20");
      } else {
        header.classList.remove("shadow-lg", "shadow-blue-200/20");
      }
    });
  }
</script>
