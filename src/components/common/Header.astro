---
const navItems = [
  { label: "ראשי", href: "#home" },
  { label: "שירותים", href: "#services" },
  { label: "המתודולוגיה", href: "#methodology" },
  { label: "אודות", href: "#about" },
  { label: "צור קשר", href: "#contact" },
];
---

<header class="sticky top-0 z-50 bg-navy-500/95 backdrop-blur-md border-b border-white/5 transition-shadow duration-300" id="site-header">
  <nav aria-label="ניווט ראשי" class="max-w-6xl mx-auto px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="#home" class="group flex items-center gap-2">
      <span class="text-2xl font-extrabold tracking-tight text-white">
        יסמין פרס
      </span>
      <span class="hidden sm:inline-block text-[11px] uppercase tracking-[0.2em] text-teal-400 font-medium border border-teal-400/30 rounded px-2 py-0.5 leading-tight">
        SCM
      </span>
    </a>

    <!-- Desktop Nav -->
    <ul class="hidden md:flex items-center gap-1" role="list">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="relative px-4 py-2 text-sm font-medium text-navy-200 hover:text-white transition-colors duration-200 rounded-md hover:bg-white/5"
          >
            {item.label}
          </a>
        </li>
      ))}
      <li class="mr-2">
        <a
          href="#contact"
          class="inline-flex items-center px-5 py-2 text-sm font-bold bg-teal-500 text-navy-500 rounded-md hover:bg-teal-400 transition-all duration-200 hover:shadow-lg hover:shadow-teal-500/20"
        >
          פגישת היכרות
        </a>
      </li>
    </ul>

    <!-- Mobile Toggle -->
    <button
      id="mobile-menu-toggle"
      type="button"
      class="md:hidden p-2 rounded-md text-navy-200 hover:text-white hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-teal-400/50 transition-colors"
      aria-expanded="false"
      aria-controls="mobile-menu"
      aria-label="תפריט ניווט"
    >
      <svg id="menu-icon-open" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-navy-600/95 backdrop-blur-md border-t border-white/5">
    <ul class="px-6 py-4 space-y-1" role="list">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="block py-3 px-3 text-sm font-medium text-navy-200 hover:text-white hover:bg-white/5 rounded-md transition-colors"
          >
            {item.label}
          </a>
        </li>
      ))}
      <li class="pt-2">
        <a
          href="#contact"
          class="block text-center py-3 px-3 text-sm font-bold bg-teal-500 text-navy-500 rounded-md hover:bg-teal-400 transition-colors"
        >
          פגישת היכרות
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  const toggle = document.getElementById("mobile-menu-toggle");
  const menu = document.getElementById("mobile-menu");
  const iconOpen = document.getElementById("menu-icon-open");
  const iconClose = document.getElementById("menu-icon-close");
  const header = document.getElementById("site-header");

  if (toggle && menu && iconOpen && iconClose) {
    toggle.addEventListener("click", () => {
      const expanded = toggle.getAttribute("aria-expanded") === "true";
      toggle.setAttribute("aria-expanded", String(!expanded));
      menu.classList.toggle("hidden");
      iconOpen.classList.toggle("hidden");
      iconClose.classList.toggle("hidden");
    });

    // Close menu on nav link click
    menu.querySelectorAll("a").forEach((link) => {
      link.addEventListener("click", () => {
        menu.classList.add("hidden");
        iconOpen.classList.remove("hidden");
        iconClose.classList.add("hidden");
        toggle.setAttribute("aria-expanded", "false");
      });
    });
  }

  // Add shadow on scroll
  if (header) {
    window.addEventListener("scroll", () => {
      if (window.scrollY > 10) {
        header.classList.add("shadow-xl", "shadow-navy-900/30");
      } else {
        header.classList.remove("shadow-xl", "shadow-navy-900/30");
      }
    });
  }
</script>
