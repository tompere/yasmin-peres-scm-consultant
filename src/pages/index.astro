---
import BaseLayout from "../layouts/BaseLayout.astro";

const services = [
  {
    title: "אבחון והערכה",
    brief: "מיפוי מקצה לקצה של שרשרת האספקה לזיהוי פערים, צווארי בקבוק והזדמנויות לשיפור.",
  },
  {
    title: "אסטרטגיה ומודל תפעולי",
    brief: "עיצוב אסטרטגיית שרשרת אספקה התומכת ביעדי הצמיחה העסקיים.",
  },
  {
    title: "תכנון רשת הפצה",
    brief: "אופטימיזציה של מיקומי מחסנים, נתיבי שינוע ורמות שירות.",
  },
  {
    title: "אופטימיזציית מלאי",
    brief: "הפחתת הון חוזר תוך שמירה על זמינות גבוהה ללקוח.",
  },
  {
    title: "תכנון ביקושים (S&OP)",
    brief: "תהליך Sales & Operations Planning שמחבר בין מכירות, תפעול וכספים.",
  },
  {
    title: "רכש ואסטרטגיית ספקים",
    brief: "מיקסום ערך מספקים באמצעות ניהול קטגוריות ומשא ומתן אסטרטגי.",
  },
  {
    title: "מצוינות תפעולית",
    brief: "שיפור מתמיד באמצעות Lean, Six Sigma וכלי ניהול איכות.",
  },
  {
    title: "טרנספורמציה דיגיטלית",
    brief: "בחירה והטמעה של פתרונות טכנולוגיים לשרשרת אספקה חכמה.",
  },
  {
    title: "קיימות ו-ESG",
    brief: "שילוב עקרונות קיימות בשרשרת האספקה מבלי לפגוע ברווחיות.",
  },
];

const methodology = [
  {
    step: "01",
    title: "גילוי",
    desc: "הבנת האתגר העסקי, מיפוי בעלי עניין והגדרת יעדים מדידים.",
  },
  {
    step: "02",
    title: "ניתוח",
    desc: "איסוף נתונים, ניתוח תהליכים וזיהוי שורשי הבעיה.",
  },
  {
    step: "03",
    title: "אסטרטגיה",
    desc: "בניית תוכנית פעולה מתועדפת עם Business Case לכל יוזמה.",
  },
  {
    step: "04",
    title: "יישום",
    desc: "ליווי צמוד ביישום, מדידת תוצאות והתאמות בזמן אמת.",
  },
];
---

<BaseLayout title="יסמין פרס | יועצת שרשרת אספקה אסטרטגית">

  <!-- HERO -->
  <section id="home" class="relative min-h-[88vh] flex items-center bg-blue-50 scroll-mt-20">
    <div class="max-w-6xl mx-auto px-6 py-16 w-full">
      <div class="grid md:grid-cols-5 gap-12 md:gap-16 items-center">
        <div class="md:col-span-3 space-y-6">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-navy-700 leading-[1.15]">
            שרשרת האספקה שלכם
            <br />
            <span class="text-pink-400">יכולה להיות</span>
            <br />
            <span class="text-pink-400">יתרון תחרותי.</span>
          </h1>

          <p class="text-lg text-navy-400 max-w-xl leading-relaxed">
            אני עוזרת לחברות להפוך את שרשרת האספקה ממרכז עלות למנוע צמיחה — באמצעות אסטרטגיה מבוססת נתונים וניסיון של שנים בתעשייה.
          </p>

          <a
            href="#contact"
            class="inline-flex items-center gap-2 px-8 py-4 bg-pink-200 text-navy-700 font-bold rounded-lg hover:bg-pink-300 transition-colors"
          >
            לתיאום פגישת היכרות
            <svg class="w-4 h-4 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          </a>
        </div>

        <!-- Headshot placeholder -->
        <div class="md:col-span-2 flex justify-center">
          <div class="w-72 h-96 sm:w-80 sm:h-[28rem] rounded-xl bg-white/60 overflow-hidden flex items-end justify-center border border-blue-100">
            <svg class="w-48 h-72 text-blue-200/50" viewBox="0 0 200 300" fill="currentColor" aria-hidden="true">
              <ellipse cx="100" cy="80" rx="50" ry="55" />
              <path d="M30 300 Q30 180 100 170 Q170 180 170 300 Z" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SERVICES -->
  <section id="services" class="py-16 bg-white scroll-mt-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="max-w-2xl mx-auto mb-12 text-center">
        <h2 class="text-3xl font-bold text-navy-700 mb-3">שירותי ייעוץ</h2>
        <p class="text-navy-400 leading-relaxed">
          פתרונות מותאמים אישית לכל שלב בשרשרת האספקה — מאבחון ועד יישום.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
        {services.map((service) => (
          <div class="p-6 rounded-xl border border-blue-100 hover:border-pink-200 transition-colors">
            <h3 class="font-bold text-navy-700 mb-2">{service.title}</h3>
            <p class="text-sm text-navy-400 leading-relaxed">{service.brief}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- METHODOLOGY -->
  <section id="methodology" class="py-16 bg-blue-50 scroll-mt-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="max-w-2xl mx-auto mb-12 text-center">
        <h2 class="text-3xl font-bold text-navy-700 mb-3">תהליך עבודה מוכח</h2>
        <p class="text-navy-400 leading-relaxed">
          מתודולוגיה מובנית שמבטיחה תוצאות מדידות בכל פרויקט.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-5">
        {methodology.map((phase) => (
          <div class="p-6 rounded-xl bg-white border border-blue-100">
            <span class="block text-3xl font-bold text-pink-200 mb-2 font-mono">{phase.step}</span>
            <h3 class="font-bold text-navy-700 mb-1">{phase.title}</h3>
            <p class="text-sm text-navy-400 leading-relaxed">{phase.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ABOUT -->
  <section id="about" class="py-16 bg-white scroll-mt-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid md:grid-cols-5 gap-12 items-center">
        <div class="md:col-span-2 flex justify-center">
          <div class="w-full max-w-xs aspect-[3/4] rounded-xl bg-blue-50 overflow-hidden border border-blue-100 flex items-end justify-center">
            <svg class="w-full h-full text-blue-200/50" viewBox="0 0 200 300" fill="currentColor" aria-hidden="true">
              <ellipse cx="100" cy="80" rx="50" ry="55" />
              <path d="M30 300 Q30 180 100 170 Q170 180 170 300 Z" />
            </svg>
          </div>
        </div>

        <div class="md:col-span-3 space-y-5">
          <h2 class="text-3xl font-bold text-navy-700">
            ניסיון קורפורטיבי,
            <br />
            גישה אישית.
          </h2>
          <div class="space-y-4 text-navy-400 leading-relaxed">
            <p>
              לאורך למעלה מ-15 שנות קריירה בתפקידי ניהול בכירים בשרשרת האספקה, צברתי ניסיון מעמיק בתעשיות מגוונות — מטכנולוגיה ותעשייה ועד קמעונאות ומזון.
            </p>
            <p>
              אני מאמינה שכל ארגון יכול להפוך את שרשרת האספקה שלו ממרכז עלות למנוע צמיחה. הגישה שלי משלבת חשיבה אסטרטגית עם יכולת יישום מעשית — כי תוכנית מצוינת שלא מיושמת היא רק מצגת יפה.
            </p>
          </div>
          <div class="flex flex-wrap gap-3 pt-2 text-sm text-navy-400">
            <span class="px-3 py-1 bg-blue-50 rounded-full border border-blue-100">APICS CSCP</span>
            <span class="px-3 py-1 bg-blue-50 rounded-full border border-blue-100">MBA</span>
            <span class="px-3 py-1 bg-blue-50 rounded-full border border-blue-100">15+ שנות ניסיון</span>
            <span class="px-3 py-1 bg-blue-50 rounded-full border border-blue-100">50+ פרויקטים</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CONTACT -->
  <section id="contact" class="py-16 bg-blue-50 scroll-mt-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-16 items-start">

        <div class="space-y-6">
          <h2 class="text-3xl font-bold text-navy-700">
            בואו נדבר על
            <br />
            שרשרת האספקה שלכם
          </h2>
          <p class="text-navy-400 leading-relaxed">
            מלאו את הפרטים ואחזור אליכם תוך יום עסקים אחד לשיחת היכרות ללא התחייבות.
          </p>

          <div class="space-y-3">
            <a href="mailto:yasmin@example.com" class="flex items-center gap-3 text-navy-400 hover:text-pink-500 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              <span class="text-sm">yasmin@example.com</span>
            </a>
            <a href="https://www.linkedin.com/" target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 text-navy-400 hover:text-pink-500 transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
              <span class="text-sm">LinkedIn</span>
            </a>
          </div>
        </div>

        <div class="bg-white rounded-xl border border-blue-100 p-8">
          <form class="space-y-5" action="#" method="POST">
            <div>
              <label for="name" class="block text-sm font-medium text-navy-600 mb-1.5">שם מלא</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-lg border border-blue-100 text-navy-700 placeholder-navy-300 text-sm focus:outline-none focus:ring-2 focus:ring-pink-200/50 focus:border-pink-200 transition-colors"
                placeholder="ישראל ישראלי"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-navy-600 mb-1.5">אימייל</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border border-blue-100 text-navy-700 placeholder-navy-300 text-sm focus:outline-none focus:ring-2 focus:ring-pink-200/50 focus:border-pink-200 transition-colors"
                placeholder="israel@company.co.il"
              />
            </div>

            <div>
              <label for="industry" class="block text-sm font-medium text-navy-600 mb-1.5">תעשייה</label>
              <select
                id="industry"
                name="industry"
                class="w-full px-4 py-3 rounded-lg border border-blue-100 text-navy-700 text-sm focus:outline-none focus:ring-2 focus:ring-pink-200/50 focus:border-pink-200 transition-colors appearance-none"
              >
                <option value="">בחרו תעשייה</option>
                <option value="tech">טכנולוגיה</option>
                <option value="manufacturing">תעשייה ויצור</option>
                <option value="retail">קמעונאות</option>
                <option value="food">מזון ומשקאות</option>
                <option value="pharma">פארמה ורפואה</option>
                <option value="logistics">לוגיסטיקה ושינוע</option>
                <option value="other">אחר</option>
              </select>
            </div>

            <div>
              <label for="challenge" class="block text-sm font-medium text-navy-600 mb-1.5">האתגר המרכזי שלכם</label>
              <textarea
                id="challenge"
                name="challenge"
                rows="4"
                class="w-full px-4 py-3 rounded-lg border border-blue-100 text-navy-700 placeholder-navy-300 text-sm focus:outline-none focus:ring-2 focus:ring-pink-200/50 focus:border-pink-200 transition-colors resize-none"
                placeholder="ספרו לי בקצרה על האתגר המרכזי שאתם מתמודדים איתו בשרשרת האספקה..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full py-4 px-6 bg-pink-200 text-navy-700 font-bold rounded-lg hover:bg-pink-300 transition-colors"
            >
              שליחה
            </button>

            <p class="text-xs text-navy-300 text-center">אני מכבדת את הפרטיות שלכם. המידע לא יועבר לצד שלישי.</p>
          </form>
        </div>

      </div>
    </div>
  </section>

</BaseLayout>

<script>
  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", (e) => {
      const href = anchor.getAttribute("href");
      if (!href || href === "#") return;
      const target = document.querySelector(href);
      if (target) {
        e.preventDefault();
        target.scrollIntoView({ behavior: "smooth" });
      }
    });
  });
</script>
