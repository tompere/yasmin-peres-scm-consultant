---
import BaseLayout from "../layouts/BaseLayout.astro";

const serviceCategories = [
  {
    category: "תכנון ובקרה",
    categoryEn: "Planning & Control",
    items: [
      "הקמה ושיפור של מערכי תכנון (S&OP) לסנכרון מלא בין מכירות, תפעול ורכש",
      "שיפור מדדי שירות (OTD/OTIF) וצמצום פערים בין התכנון לביצוע",
      "בניית תחזיות ביקוש מדויקות יותר למניעת חוסרים או עודפים",
      "ייעול תהליכי חיזוי ותכנון ביקושים",
    ],
  },
  {
    category: "ניהול מלאי ורכש",
    categoryEn: "Inventory & Procurement",
    items: [
      "אופטימיזציה של רמות מלאי: צמצום מלאי מת ושיפור תזרים המזומנים",
      "הטמעת מודלים אנליטיים לניהול מלאי חכם במערכות המידע",
      "ניהול ספקים, רכש ומשלוחי ייבוא/ייצוא",
      "קיצור זמני אספקה (Lead Time) ושיפור אמינות מלאי",
    ],
  },
  {
    category: "מצוינות תפעולית",
    categoryEn: "Operational Excellence",
    items: [
      "הגדרת KPIs ומדדי ליבה לניהול ביצועים שוטף",
      "אבחון 'צווארי בקבוק' בתהליך ומתן פתרונות להתייעלות מיידית",
      "ליווי טרנספורמציה דיגיטלית והטמעת מערכות תומכות החלטה",
      "עיצוב מבנה ארגוני והגדרות תפקיד התומכים בצרכים העסקיים",
    ],
  },
];

const methodology = [
  {
    step: "01",
    title: "אבחון",
    desc: "הכרת הארגון, מיפוי התהליכים הקיימים וזיהוי פערים ואתגרים.",
  },
  {
    step: "02",
    title: "הגדרת יעדים",
    desc: "הגדרת מדדי ביצוע (KPIs) ויעדים מדידים — תרגום מטרות עסקיות לתוכנית עבודה.",
  },
  {
    step: "03",
    title: "תכנון ובנייה",
    desc: "הקמת תהליכי תכנון ובקרה, עיצוב שגרות עבודה ותשתית דיגיטלית.",
  },
  {
    step: "04",
    title: "יישום וליווי",
    desc: "ליווי היישום בפועל בשטח — מדידת תוצאות, התאמות והטמעה להמשכיות.",
  },
];
---

<BaseLayout title="יסמין פרס | יועצת שרשרת אספקה אסטרטגית" description="מובילה ארגונים למצוינות תפעולית בשרשרת האספקה. ייעוץ אסטרטגי וניהול פרויקטים בתפעול ורכש עם 15 שנות ניסיון.">

  <!-- HERO -->
  <section id="home" class="relative min-h-[88vh] flex items-center bg-blue-50 scroll-mt-20">
    <div class="max-w-6xl mx-auto px-6 py-16 w-full">
      <div class="grid md:grid-cols-5 gap-12 md:gap-16 items-center">
        <div class="md:col-span-3 space-y-6">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-navy-700 leading-[1.15]">
            מובילה ארגונים
            <br />
            <span class="text-pink-400">למצוינות תפעולית.</span>
          </h1>

          <p class="text-lg text-navy-400 max-w-xl leading-relaxed">
            הופכת את שרשרת האספקה שלכם למנוע צמיחה. אני מסייעת לארגונים לגשר על הפער שבין אסטרטגיה לביצוע, לייעל תהליכים ולשפר את השורה התחתונה.
          </p>
          
          <div class="text-sm font-semibold text-navy-500 bg-white/50 inline-block px-4 py-2 rounded-lg border border-blue-100">
            ייעוץ אסטרטגי וניהול פרויקטים בתפעול ורכש | 15 שנות ניסיון בחברות מובילות (<span class="font-bold text-navy-700">טבע</span>, <span class="font-bold text-navy-700">פיברו</span>)
          </div>

          <div class="pt-2">
            <a
              href="#contact"
              class="inline-flex items-center gap-2 px-8 py-4 bg-pink-200 text-navy-700 font-bold rounded-lg hover:bg-pink-300 transition-colors"
            >
              לתיאום פגישת היכרות
              <svg class="w-4 h-4 rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
        </div>

        <div class="md:col-span-2 flex justify-center">
          <div class="w-72 h-96 sm:w-80 sm:h-[28rem] rounded-xl bg-white/60 overflow-hidden border border-blue-100 shadow-sm">
            <img src={`${import.meta.env.BASE_URL}/yasmin_peres_csm_1.png`} alt="יסמין פרס — יועצת שרשרת אספקה ותפעול" class="w-full h-full object-cover" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SERVICES -->
  <section id="services" class="py-16 bg-white scroll-mt-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="max-w-2xl mx-auto mb-12 text-center">
        <h2 class="text-3xl font-bold text-navy-700 mb-3">תחומי התמחות ושירותים</h2>
        <p class="text-navy-400 leading-relaxed">
          פתרונות מותאמים אישית לשיפור הביצועים הארגוניים — מתכנון ועד הטמעה.
        </p>
      </div>

      <div class="space-y-8">
        {serviceCategories.map((cat) => (
          <div class="rounded-xl border border-blue-100 p-6 sm:p-8 hover:border-pink-200 transition-colors">
            <h3 class="text-xl font-bold text-navy-700 mb-1">{cat.category}</h3>
            <p class="text-sm text-pink-400 font-medium mb-4">{cat.categoryEn}</p>
            <ul class="grid sm:grid-cols-2 gap-x-6 gap-y-2">
              {cat.items.map((item) => (
                <li class="flex items-start gap-2 text-sm text-navy-400 leading-relaxed">
                  <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-pink-300 shrink-0" />
                  {item}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- METHODOLOGY -->
  <section id="methodology" class="py-16 bg-blue-50 scroll-mt-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="max-w-2xl mx-auto mb-12 text-center">
        <h2 class="text-3xl font-bold text-navy-700 mb-3">איך אני עובדת</h2>
        <p class="text-navy-400 leading-relaxed">
          גישה מובנית שמתחילה בהבנת הארגון ומסתיימת ביישום בשטח.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-5">
        {methodology.map((phase) => (
          <div class="p-6 rounded-xl bg-white border border-blue-100 shadow-sm">
            <span class="block text-3xl font-bold text-pink-200 mb-2 font-mono">{phase.step}</span>
            <h3 class="font-bold text-navy-700 mb-1">{phase.title}</h3>
            <p class="text-sm text-navy-400 leading-relaxed">{phase.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ABOUT -->
  <section id="about" class="py-16 bg-white scroll-mt-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid md:grid-cols-5 gap-12 items-start">
        <div class="md:col-span-2 flex justify-center sticky top-24">
          <div class="w-full max-w-xs aspect-[3/4] rounded-xl bg-blue-50 overflow-hidden border border-blue-100 shadow-sm">
            <img src={`${import.meta.env.BASE_URL}/yasmin_peres_csm_1.png`} alt="יסמין פרס" class="w-full h-full object-cover" />
          </div>
        </div>

        <div class="md:col-span-3 space-y-6">
          <h2 class="text-3xl font-bold text-navy-700">
            נעים להכיר, יסמין פרס
          </h2>
          
          <div class="space-y-4 text-navy-400 leading-relaxed text-lg">
            <p>
              עם רקע של 15 שנים בתפקידי ניהול בכירים בשרשראות אספקה גלובליות ומקומיות (כולל <span class="font-bold text-navy-700">טבע</span> ו-<span class="font-bold text-navy-700">פיברו</span>), אני מביאה לשולחן ראייה מערכתית רחבה לצד יכולת ירידה לפרטים הקטנים.
            </p>
            <p>
              המומחיות שלי היא בחיבור בין העולם האסטרטגי לרצפת הייצור: תרגום מטרות עסקיות לתהליכים מדידים, בניית תוכניות עבודה פרקטיות, והובלת שינויים ארגוניים שמחזיקים מעמד לאורך זמן.
            </p>
            
            <div class="bg-blue-50 p-4 rounded-lg border-r-4 border-pink-300">
              <p class="font-bold text-navy-700 mb-1">הישגים בולטים:</p>
              <p class="text-sm">הובלת פרויקט אופטימיזציה במפעל שהביא לחיסכון של 50% בעלויות בתוך 18 חודשים.</p>
            </div>

            <p>
              אני מאמינה בגישה "בגובה העיניים" – פתרונות המותאמים בדיוק לגודל הארגון, למשאביו ולתרבות הניהולית שלו.
            </p>
          </div>

          <div class="flex flex-wrap gap-3 pt-4 text-sm text-navy-500 font-medium">
            <span class="px-3 py-1 bg-white rounded-full border border-blue-100 shadow-sm">B.Sc הנדסת תעשייה וניהול</span>
            <span class="px-3 py-1 bg-white rounded-full border border-blue-100 shadow-sm">15+ שנות ניסיון</span>
            <span class="px-3 py-1 bg-white rounded-full border border-blue-100 shadow-sm">טבע תעשיות פרמצבטיות</span>
            <span class="px-3 py-1 bg-white rounded-full border border-blue-100 shadow-sm">פיברו</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CONTACT -->
  <section id="contact" class="py-16 bg-blue-50 scroll-mt-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-16 items-start">

        <div class="space-y-6">
          <h2 class="text-3xl font-bold text-navy-700">
            מוכנים לייעל את
            <br />
            שרשרת האספקה שלכם?
          </h2>
          <p class="text-navy-400 leading-relaxed text-lg">
            בואו נבדוק יחד איך אפשר לשפר את הביצועים בארגון שלכם. אשמח לקבוע פגישה לבחינה של עבודה משותפת.
          </p>

          <div class="space-y-4 pt-4">
            <a href="tel:+972548882218" class="flex items-center gap-3 text-navy-600 hover:text-pink-500 transition-colors group" dir="ltr">
              <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
              </div>
              <span class="font-medium">054-888-2218</span>
            </a>
            
            <a href="mailto:yasminbit@gmail.com" class="flex items-center gap-3 text-navy-600 hover:text-pink-500 transition-colors group">
              <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <span class="font-medium">yasminbit@gmail.com</span>
            </a>

            <div class="flex items-center gap-3 text-navy-600 group">
               <div class="w-10 h-10 rounded-full bg-white flex items-center justify-center shadow-sm">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
              </div>
              <span class="font-medium">כפר ורבורג (זמינה לפרויקטים בכל הארץ)</span>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl border border-blue-100 p-8 shadow-sm">
          <form class="space-y-5" action="#" method="POST">
            <div>
              <label for="name" class="block text-sm font-medium text-navy-600 mb-1.5">שם מלא</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-lg border border-blue-100 text-navy-700 placeholder-navy-300 text-sm focus:outline-none focus:ring-2 focus:ring-pink-200/50 focus:border-pink-200 transition-colors"
                placeholder="ישראל ישראלי"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-navy-600 mb-1.5">אימייל</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border border-blue-100 text-navy-700 placeholder-navy-300 text-sm focus:outline-none focus:ring-2 focus:ring-pink-200/50 focus:border-pink-200 transition-colors"
                placeholder="israel@company.co.il"
              />
            </div>

            <div>
              <label for="industry" class="block text-sm font-medium text-navy-600 mb-1.5">תעשייה</label>
              <select
                id="industry"
                name="industry"
                class="w-full px-4 py-3 rounded-lg border border-blue-100 text-navy-700 text-sm focus:outline-none focus:ring-2 focus:ring-pink-200/50 focus:border-pink-200 transition-colors appearance-none"
              >
                <option value="">בחרו תעשייה</option>
                <option value="pharma">פארמה ורפואה</option>
                <option value="manufacturing">תעשייה וייצור</option>
                <option value="food">מזון ומשקאות</option>
                <option value="logistics">לוגיסטיקה ושינוע</option>
                <option value="retail">קמעונאות</option>
                <option value="other">אחר</option>
              </select>
            </div>

            <div>
              <label for="challenge" class="block text-sm font-medium text-navy-600 mb-1.5">האתגר המרכזי שלכם</label>
              <textarea
                id="challenge"
                name="challenge"
                rows="4"
                class="w-full px-4 py-3 rounded-lg border border-blue-100 text-navy-700 placeholder-navy-300 text-sm focus:outline-none focus:ring-2 focus:ring-pink-200/50 focus:border-pink-200 transition-colors resize-none"
                placeholder="ספרו לי בקצרה על האתגר המרכזי שאתם מתמודדים איתו בשרשרת האספקה..."
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full py-4 px-6 bg-pink-200 text-navy-700 font-bold rounded-lg hover:bg-pink-300 transition-colors shadow-sm"
            >
              שליחה
            </button>

            <p class="text-xs text-navy-300 text-center">אני מכבדת את הפרטיות שלכם. המידע לא יועבר לצד שלישי.</p>
          </form>
        </div>

      </div>
    </div>
  </section>

</BaseLayout>

<script>
  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
    anchor.addEventListener("click", (e) => {
      const href = anchor.getAttribute("href");
      if (!href || href === "#") return;
      const target = document.querySelector(href);
      if (target) {
        e.preventDefault();
        target.scrollIntoView({ behavior: "smooth" });
      }
    });
  });
</script>