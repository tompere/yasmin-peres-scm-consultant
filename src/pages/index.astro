      <div class="max-w-2xl mx-auto mb-12 text-center">
        <h2 class="text-3xl font-bold text-navy-700 mb-3">איך אני עובדת</h2>
        <p class="text-navy-400 leading-relaxed">
          גישה מובנית שמתחילה בהבנת הארגון ומסתיימת ביישום בשטח.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-5">
        {methodology.map((phase) => (
          <div class="p-6 rounded-xl bg-white border border-blue-100 shadow-sm">
            <span class="block text-3xl font-bold text-pink-200 mb-2 font-mono">{phase.step}</span>
            <h3 class="font-bold text-navy-700 mb-1">{phase.title}</h3>
            <p class="text-sm text-navy-400 leading-relaxed">{phase.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ABOUT -->
  <section id="about" class="py-16 bg-white scroll-mt-20">
    <div class="max-w-6xl mx-auto px-6">
      <div class="grid md:grid-cols-5 gap-12 items-start">
        <div class="md:col-span-2 flex justify-center">
